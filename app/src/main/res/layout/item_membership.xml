<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/frontmembership">

            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:typeface="serif"
                android:textSize="22sp"
                android:text="Name"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv_member_type"
                android:layout_below="@+id/tv_member_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:typeface="serif"
                android:textSize="22sp"
                android:text="Membership Type"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:weightSum="2"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/tv_member_issue_date"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:text="Issue Date"
                    android:gravity="center"
                    android:paddingLeft="4dp"/>

                <TextView
                    android:id="@+id/tv_member_expiry_date"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:text="Issue Date"
                    android:paddingLeft="4dp"/>

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>